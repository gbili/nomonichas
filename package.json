{
  "name": "nomonichas",
  "version": "0.0.0-development",
  "description": "Base Project: Node Mocha Chai Travis Semantic-Release Nyc Codecov Ghooks",
  "main": "build/index.js",
  "scripts": {
    "clean": "rm -fr ./build/*",
    "prebuild": "npm run clean",
    "build": "babel -d ./build ./src",
    "coverage:generate": "nyc npm run test",
    "coverage:check": "nyc check-coverage --lines 90 --branches 80 --statements 90 --functions 90",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov",
    "coverage:report:upload": "CODECOV_TOKEN=\"$(grep \"CODECOV_TOKEN=\" .env | cut -d'=' -f2)\" codecov",
    "coverage": "npm run coverage:generate && npm run coverage:check && npm run coverage:report && npm run coverage:report:upload",
    "test": "mocha --require @babel/register --recursive",
    "develop": "nodemon --exec babel-node ./src/index.js",
    "serve": "NODE_ENV=production node ./build/index.js",
    "semantic-release": "semantic-release"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run coverage:generate && npm run coverage:check"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gbili/nomonichas.git"
  },
  "keywords": [
    "nodejs",
    "templating",
    "moustache",
    "simple",
    "minimal"
  ],
  "author": "Guillermo Pages <mail@guillermo.at> (https://guillermo.at)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gbili/nomonichas/issues"
  },
  "homepage": "https://github.com/gbili/nomonichas#readme",
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.5",
    "@babel/node": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "@babel/register": "7.4.4",
    "chai": "4.2.0",
    "codecov": "^3.5.0",
    "ghooks": "^2.0.4",
    "marked": "^4.0.10",
    "mocha": "6.1.4",
    "nodemon": "1.19.1",
    "nyc": "^14.1.1",
    "semantic-release": "^15.13.19"
  },
  "dependencies": {},
  "directories": {
    "test": "test"
  }
}
